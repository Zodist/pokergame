<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/startBtn"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Start"
            android:gravity="center"/>
        <Button
            android:id="@+id/shuffleBtn"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Shuffle"
            android:gravity="center"/>
        <Button
            android:id="@+id/settingBtn"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Setting"
            android:gravity="center"/>
        <Button
            android:id="@+id/masterModeBtn"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="M"
            android:gravity="center"/>
        <Button
            android:id="@+id/modeBtn"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"/>
    </LinearLayout>

    <!--peerCardView-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:orientation="horizontal">
        <!--peerStateView-->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@drawable/border">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="PeerMoney"
                    android:gravity="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="PeerRank"
                    android:gravity="center"
                    android:background="@drawable/border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/peerMoneyView"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="PeerMoney"
                    android:gravity="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/peerRankView"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="PeerRank"
                    android:gravity="center"
                    android:background="@drawable/border"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/peercardview1"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/peercardview2"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/peercardview3"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/peercardview4"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/peercardview5"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/peercardview6"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/peercardview7"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
    </LinearLayout>
    <!--StatusView-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Gamemoney" />

            <TextView
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Turn" />

            <TextView
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="BettingMoney" />

            <TextView
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="winner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gameMoneyView"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Gamemoney" />

            <TextView
                android:id="@+id/turnView"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Turn" />

            <TextView
                android:id="@+id/BetMoneyView"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="BettingMoney" />

            <TextView
                android:id="@+id/winnerView"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="winner" />
        </LinearLayout>
    </LinearLayout>
    <!--MyCardView-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:orientation="horizontal">
        <!--MyStateView-->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@drawable/border">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Mymoney"
                    android:gravity="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="MyRank"
                    android:gravity="center"
                    android:background="@drawable/border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/myMoneyView"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Mymoney"
                    android:gravity="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/myRankView"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="MyRank"
                    android:gravity="center"
                    android:background="@drawable/border"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/mycardview1"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/mycardview2"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/mycardview3"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/mycardview4"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/mycardview5"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/mycardview6"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/mycardview7"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#bbbbbb"
            android:gravity="center"/>
    </LinearLayout>

    <!--MyButtonView-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:orientation="horizontal">
            <Button
                android:id="@+id/HalfBtn"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Half raise" />
            <Button
                android:id="@+id/QuartorBtn"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Quartor raise" />
            <Button
                android:id="@+id/CheckBtn"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Check" />
            <Button
                android:id="@+id/CallBtn"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Call" />
            <Button
                android:id="@+id/DieBtn"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Die" />
    </LinearLayout>
</LinearLayout>